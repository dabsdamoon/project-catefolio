# direnv configuration for Catefolio project
# Automatically switches to houmy gcloud configuration when entering this directory
#
# Prerequisites (one-time setup):
#   gcloud config configurations create houmy
#   gcloud config set account YOUR_EMAIL
#   gcloud config set project YOUR_PROJECT_ID
#   gcloud auth login
#   gcloud auth application-default login

# Switch to houmy gcloud configuration
export CLOUDSDK_ACTIVE_CONFIG_NAME="houmy"

# Load .env file first
dotenv_if_exists .env

# Override: use ADC instead of service account key from .env
# (relays-cloud org policy blocks SA key creation)
unset GOOGLE_APPLICATION_CREDENTIALS
export GOOGLE_CLOUD_PROJECT="relays-cloud"

echo "gcloud config: houmy (using ADC)"
